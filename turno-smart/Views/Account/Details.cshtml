<div class="container py-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="nav flex-column">
                        <!-- Botón General -->
                        <a href="/Account/Details?ActiveTab=general" 
                           class="btn text-start @(Model.ActiveTab == "general" ? "fw-bold text-custom" : "text-dark")">
                            General
                        </a>
                        
                        <!-- Botón Seguridad -->
                        <a href="/Account/Details?ActiveTab=security" 
                           class="btn text-start @(Model.ActiveTab == "security" ? "fw-bold text-custom" : "text-dark")">
                            Seguridad
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    @if (Model.ActiveTab == "general")
                    {
                        <form asp-action="UpdateProfile" method="post">
                            <h2 class="h4 mb-4">Modificá tu Perfil</h2>
                            <div class="row g-3">

                                <input type="hidden" asp-for="Id" />

                                <div class="col-md-6">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="DNI" class="form-control" placeholder="DNI" />
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="FechaNacimiento" class="form-control" placeholder="Fecha de nacimiento" />
                                </div>
                                <div class="col-md-12">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                </div>
                                <div class="col-md-12">
                                    <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                                </div>
                                <div class="col-md-12">
                                    <input asp-for="Domicilio" class="form-control" placeholder="Docimicilio" />
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Provincia" class="form-control" placeholder="Provincia" />
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-custom w-100">Confirmar</button>
                                </div>
                            </div>
                        </form>
                    }
                    else if (Model.ActiveTab == "security")
                    {
                        <form asp-action="UpdatePassword" method="post">
                            <h2 class="h4 mb-4">Actualizá tu contraseña</h2>
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <input class="form-control" placeholder="Contraseña actual"/>
                                </div>
                                <div class="col-md-12">
                                    <input asp-for="Password" class="form-control" placeholder="Nueva contraseña" />
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-custom w-100">Confirmar</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';
            console.log(successMessage);
            console.log(errorMessage);

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-bottom-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            if (successMessage) {
                toastr.success(successMessage);
            }

            if (errorMessage) {
                toastr.error(errorMessage);
            }
        });
    </script>
}

