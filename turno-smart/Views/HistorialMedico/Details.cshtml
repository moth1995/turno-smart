@using turno_smart.ViewModels.HistorialMedicoVM.cs
@model ListHistorialMedicoVM

<div class="container py-5">
    <!-- Título principal -->
    <h1 class="display-4 text-center mb-2">Historial Médico</h1>
    <p class="text-center text-muted mb-5">
        Aquí se muestra el historial médico de <strong>@Model.Paciente.Nombre @Model.Paciente.Apellido</strong>.
    </p>

    <div class="d-flex justify-content align-items-center gap-3 mb-4">
        <partial name="_BackToAgendaDiaria" />
        @if (User.IsInRole("Medico"))
        {
        <form method="get" asp-action="Create">
            <input type="hidden" name="pacienteId" value="@Model.Paciente.Id" />
            <input type="hidden" name="medicoId" value="@Model.Medico.Id" />
            <button type="submit" class="btn btn-light btn-lg mt-4">➕ Crear Historia Médica</button>
        </form>
        }
    </div>

    <!-- Tabla para mostrar el historial médico -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (Model.HistorialesMedicos.Any())
            {
                <div class="table-responsive" style="max-height: calc(100vh - 300px); overflow-y: auto;">
                    <table class="table table-hover mb-0">
                        <thead style="position: sticky; top: 0; background-color: white; z-index: 1;">
                            <tr>
                                <th class="ps-4">Fecha</th>
                                <th>Estudio</th>
                                <th>Diagnóstico</th>
                                <th>Síntomas</th>
                                <th>Tratamiento</th>
                                <th>Médico</th>
                                <th>Notas Adicionales</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var historial in Model.HistorialesMedicos)
                            {
                                <tr>
                                    <td class="ps-4 align-middle">
                                        @historial.Fecha.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="align-middle">
                                        @historial.Estudio.Descripcion
                                    </td>
                                    <td class="align-middle">
                                        @historial.Diagnostico
                                    </td>
                                    <td class="align-middle">
                                        @historial.Sintomas
                                    </td>
                                    <td class="align-middle">
                                        @historial.Tratamiento
                                    </td>
                                    <td class="align-middle">
                                        @historial.Medico.Nombre @historial.Medico.Apellido
                                    </td>
                                    <td class="align-middle">
                                        @historial.NotasAdicionales
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted">
                    <p class="lead">No se encontraron registros de historial médico para este paciente.</p>
                </div>
            }
        </div>
    </div>

</div>
