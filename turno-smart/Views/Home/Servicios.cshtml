
@{
    ViewData["Title"] = "Servicios";
}

<div class="container py-5">
    <h1 class="display-4 fw-light mb-3">Nuestros servicios</h1>
    <p class="lead mb-5">
        Centro Médico Ejemplo ofrece atención médica de primera para toda la familia.
    </p>

    <div class="row g-4">
        <!-- Card Especialidades -->
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Especialidad")" class="text-decoration-none text-reset">
                <div class="card h-100 text-center p-4 border-0 shadow hover-lift doctor-card" style="aspect-ratio: 1/1;">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <div class="text-custom mx-auto mb-4" style="width: 80px; height: 80px;">
                            @* Icono de corazón *@
                            <svg class="w-100 h-100" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                            </svg>
                        </div>
                        <h3 class="card-title mb-0">Especialidades</h3>
                    </div>
                </div>
            </a>
        </div>

        <!-- Card Análisis Clínicos -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-4 border-0 shadow hover-lift doctor-card" style="aspect-ratio: 1/1;">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <div class="text-custom mx-auto mb-4" style="width: 80px; height: 80px;">
                        @* Icono de ADN *@
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-dna w-100 h-100">
                            <path d="M2 15c6.667-6 13.333 0 20-6"></path><path d="M9 22c1.798-1.998 2.518-3.995 2.807-5.993"></path><path d="M15 2c-1.798 1.998-2.518 3.995-2.807 5.993"></path><path d="m17 6-2.5-2.5"></path><path d="m14 8-1-1"></path><path d="m7 18 2.5 2.5"></path><path d="m3.5 14.5.5.5"></path><path d="m20 9 .5.5"></path><path d="m6.5 12.5 1 1"></path><path d="m16.5 10.5 1 1"></path><path d="m10 16 1.5 1.5"></path>
                        </svg>
                    </div>
                    <h3 class="card-title mb-0">Análisis Clínicos</h3>
                </div>
            </div>
        </div>

        <!-- Card Profesionales -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-4 border-0 shadow hover-lift doctor-card" style="aspect-ratio: 1/1;">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <div class="text-custom mx-auto mb-4" style="width: 80px; height: 80px;">
                        @* Icono de estetoscopio *@
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-stethoscope w-100 h-100">
                            <path d="M4.8 2.3A.3.3 0 1 0 5 2H4a2 2 0 0 0-2 2v5a6 6 0 0 0 6 6v0a6 6 0 0 0 6-6V4a2 2 0 0 0-2-2h-1a.2.2 0 1 0 .3.3"></path><path d="M8 15v1a6 6 0 0 0 6 6v0a6 6 0 0 0 6-6v-4"></path><circle cx="20" cy="10" r="2"></circle>
                        </svg>
                    </div>
                    <h3 class="card-title mb-0">Profesionales</h3>
                </div>
            </div>
        </div>
    </div>
</div>

