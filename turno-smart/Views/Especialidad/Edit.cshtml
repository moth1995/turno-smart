@model turno_smart.ViewModels.EspecialidadVM.EditEspecialidadVM
@{
    ViewBag.Title = "Editar Especialidad";
}

<h2>Editar Especialidad</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" />
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <textarea class="form-control" id="Descripcion" name="Descripcion">@Model.Descripcion</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a asp-action="Index">Volver a la lista</a>
