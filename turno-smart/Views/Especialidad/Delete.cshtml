@model turno_smart.ViewModels.EspecialidadVM.DeleteEspecialidadVM

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-lg-8">
            <h2>Eliminar Especialidad</h2>

            <h3>¿Estás seguro que deseas eliminar esta especialidad?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Especialidad:
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Nombre
                    </dd>
                </dl>

                <a href="@Url.Action("Index", "Especialidad")"></a>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <a asp-action="Index">Volver a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>