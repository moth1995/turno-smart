@model turno_smart.ViewModels.EspecialidadVM.EspecialidadVM
@{
    Layout = null;
}

<div class="modal-header">
    <div class="modal-title h4" id="modal-details-label">Detalles de Especialidad</div>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.Nombre</dd>

            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>
        </dl>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
</div>