@model turno_smart.ViewModels.EspecialidadVM.EspecialidadVM

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-lg-8">
            <h2>Detalles de Especialidad</h2>

            <div>
                <h4>Especialidad</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Nombre
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Nombre
                    </dd>
                    <dt class="col-sm-2">
                        Descripción
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Descripcion
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
                <a asp-action="Index">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>