@model DoctorVM
<div class="col">
    <div class="card h-100 border-0 shadow doctor-card">
        <div class="rounded-circle overflow-hidden mx-auto mt-4" style="width: 128px; height: 128px;">
            <img src="@Model.Image" class="w-100 h-100" style="object-fit: cover;" />
        </div>
        <div class="card-body text-center">
            <h5 class="card-title fw-semibold">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-custom">@Model.Specialty</h6>
            <p class="card-text text-muted small">@Model.Description</p>
        </div>
    </div>
</div>