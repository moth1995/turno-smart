@using turno_smart.ViewModels.RecepcionistaVM
@model ListRecepcionistaVM

<div class="container py-5">

    <h1 class="display-4 text-center mb-2">Recepcionistas</h1>
    <div class="d-flex justify-content align-items-center gap-3">

        <form method="get" asp-action="Create" asp-controller="Recepcionista" id="create-btn">
            <button type="submit" class="btn btn-light btn-lg mt-4" data-bs-toggle="modal" data-bs-target="#modal-create">
                ‚ûï Crear Recepcionista
            </button>
        </form>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <form method="get" class="input-group">
                <input type="text"
                       class="form-control"
                       placeholder="Buscar un recepcionista..."
                       asp-for="Filter" />
                <button type="submit" class="btn btn-outline-secondary">üîç</button>
            </form>
        </div>
    </div>

    <div class="container-fluid px-0 d-flex flex-column" style={{ minHeight: 'calc(100vh - 200px)' }}>
        <div class="card border-0 shadow-sm flex-grow-1">
            <div class="card-body p-0">
                <div class="table-responsive" style={{ maxHeight: 'calc(100vh - 300px)' , overflowY: 'auto' }}>
                    <table class="table table-hover mb-0">
                        <thead style={{ position: 'sticky' , top: 0, backgroundColor: 'white' , zIndex: 1 }}>
                            <tr>
                                <th class="ps-4">Nombre</th>
                                <th>DNI</th>
                                <th>Email</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Recepcionistas.Any())
                            {
                                @foreach (var recepcionista in Model.Recepcionistas)
                                {
                                    <tr>
                                        <td class="ps-4 align-middle">
                                            <span class="fw-medium">@recepcionista.Nombre</span> @*  TO-DO HACERLO LINK *@
                                        </td>
                                        <td class="align-middle">
                                            @recepcionista.DNI
                                        </td>
                                        <td class="align-middle">
                                            @recepcionista.Email
                                        </td>
                                        <td class="text-end pe-4 align-middle">
                                            <div class="btn-group">
                                                <a asp-controller="Recepcionista"
                                                    asp-action="Details"
                                                    asp-route-id="@recepcionista.Id"
                                                    class="btn btn-sm btn-secondary me-1">
                                                    Info
                                                </a>
                                                <a asp-controller="Recepcionista"
                                                    asp-action="Edit"
                                                    asp-route-id="@recepcionista.Id"
                                                    class="btn btn-sm btn-primary me-1">
                                                    Editar
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan=6 class="text-center py-4 text-muted">
                                        No se encontraron recepcionistas en la base de datos
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal de Edit-->
<div id="modal-edit" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id='modal-edit-content'></div>
        </div>
    </div>
</div>
<!-- Modal de Create-->
<div id="modal-create" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id='modal-create-content'></div>
        </div>
    </div>
</div>
<!-- Modal de Delete -->
<div id="modal-delete" class="modal fade" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="modal-delete-content">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';
            console.log(successMessage);
            console.log(errorMessage);

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-bottom-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            if (successMessage) {
                toastr.success(successMessage);
            }

            if (errorMessage) {
                toastr.error(errorMessage);
            }
        });
    </script>
}

