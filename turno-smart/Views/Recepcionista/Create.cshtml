@using turno_smart.ViewModels.CreateRecepcionistaVM
@model CreateRecepcionistaVM
@{
    ViewData["Title"] = "Crear Recepcionista";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h1 class="display-4 text-center mb-4">@ViewData["Title"]</h1>
            <p class="lead text-center mb-5">
                Complete los datos para crear un nuevo recepcionista en el sistema.
            </p>

            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label"></label>
                            <input asp-for="Apellido" class="form-control" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DNI" class="form-label"></label>
                            <input asp-for="DNI" type="number" class="form-control" />
                            <span asp-validation-for="DNI" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-primary btn-lg">Crear Recepcionista</button>
                            <a href="@Url.Action("Index", "Recepcionista")" class="btn btn-outline-secondary btn-lg">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
