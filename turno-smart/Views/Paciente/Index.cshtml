@model ListPacienteVM
<div class="container py-5">

    <h1 class="display-4 text-center mb-2">Pacientes</h1>
    <p class="text-center text-muted mb-5">Administrá tus pacientes</p>
    <div class="d-flex justify-content align-items-center gap-3">

        <form method="get" asp-action="Create" asp-controller="Paciente" id="create-btn">
            <button type="submit" class="btn btn-light btn-lg mt-4" data-bs-toggle="modal" data-bs-target="#modal-create">
                ➕ Crear Paciente
            </button>
        </form>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <form method="get" class="input-group">
                <input type="text"
                       class="form-control"
                       placeholder="Buscar un paciente..."
                       asp-for="Filter" />
                <button type="submit" class="btn btn-outline-secondary">🔍</button>
            </form>
        </div>
    </div>

    <div class="container-fluid px-0 d-flex flex-column" style={{ minHeight: 'calc(100vh - 200px)' }}>
        <div class="card border-0 shadow-sm flex-grow-1">
            <div class="card-body p-0">
                <div class="table-responsive" style={{ maxHeight: 'calc(100vh - 300px)' , overflowY: 'auto' }}>
                    <table class="table table-hover mb-0">
                        <thead style={{ position: 'sticky' , top: 0, backgroundColor: 'white' , zIndex: 1 }}>
                            <tr>
                                <th class="ps-4">Nombre</th>
                                <th>DNI</th>
                                <th>Cobertura</th>
                                <th>Telefono</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Pacientes.Any())
                            {
                                @foreach (var paciente in Model.Pacientes)
                                {
                                    <tr>
                                        <td class="ps-4 align-middle">
                                            <span class="fw-medium">@paciente.NombreCompleto</span> @*  TO-DO HACERLO LINK *@
                                        </td>
                                        <td class="align-middle">
                                            @paciente.Dni
                                        </td>
                                        <td class="align-middle">
                                            @paciente.Cobertura
                                        </td>
                                        <td class="align-middle">
                                            @paciente.Telefono
                                        </td>
                                        <td class="text-end pe-4 align-middle">
                                            <div class="btn-group">
                                                <form method="get" asp-action="Edit" asp-controller="Paciente" id="edit-btn">
                                                    <button type="submit" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modal-edit">
                                                        Editar
                                                    </button>
                                                </form>
                                                <form method="get" asp-action="Edit" asp-controller="Paciente" id="delete-btn">
                                                    <button type="submit" class="btn btn-danger btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#modal-delete">
                                                        Dar de baja
                                                    </button>
                                                </form>

                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan=6 class="text-center py-4 text-muted">
                                        No se encontraron pacientes en la base de datos
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal de Edit-->
<div id="modal-edit" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id='modal-edit-content'></div>
        </div>
    </div>
</div>
<!-- Modal de Create-->
<div id="modal-create" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id='modal-create-content'></div>
        </div>
    </div>
</div>
<!-- Modal de Delete -->
<div id="modal-delete" class="modal fade" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="modal-delete-content">
        </div>
    </div>
</div>

